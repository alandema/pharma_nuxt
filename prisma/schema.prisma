generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String         @id @default(uuid())
  username      String         @unique
  password_hash String         @map("password_hash")
  role          String
  is_active     Boolean        @default(true)
  created_at    DateTime       @default(now()) @map("created_at")
  patient       Patient[]
  prescriptions Prescription[]
  logs          Log[]

  @@map("users")
}

model Patient {
  id              String         @id @default(uuid())
  registered_by   String
  user            User           @relation(fields: [registered_by], references: [id], onDelete: SetNull)
  name            String
  rg              String?
  gender          String?
  cpf             String?        @unique
  birth_date      String?        @map("birth_date")
  phone           String?
  zipcode         String?
  street          String?
  district        String?
  house_number    String?        @map("house_number")
  additional_info String?        @map("additional_info")
  country         String?
  state           String?
  city            String?
  medical_history String?        @map("medical_history")
  created_at      DateTime       @default(now()) @map("created_at")
  prescriptions   Prescription[]
  logs             Log[]

  @@map("patients")
}

model Prescription {
  id              String   @id @default(uuid())
  patient_id      String   @map("patient_id")
  prescribed_by   String?  @map("prescribed_by")
  date_prescribed String   @map("date_prescribed")
  json_form_info  Json     @map("json_form_info")
  created_at      DateTime @default(now()) @map("created_at")
  patient         Patient  @relation(fields: [patient_id], references: [id], onDelete: Cascade)
  user            User?    @relation(fields: [prescribed_by], references: [id], onDelete: SetNull)

  @@map("prescriptions")
}

model Formulas {
  id          String   @id @default(uuid())
  name        String   @unique
  information String?
  created_at  DateTime @default(now()) @map("created_at")

  @@map("formulas")
}

model Log {
  id            String    @id @default(uuid())
  event_time    DateTime  @map("event_time")
  message       String    @map("message")
  user_id       String?   @map("user_id")
  patient_id    String?   @map("patient_id")
  user          User?     @relation(fields: [user_id], references: [id], onDelete: SetNull)
  patient       Patient?  @relation(fields: [patient_id], references: [id], onDelete: SetNull)
  @@map("logs")
}
