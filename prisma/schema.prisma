generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id            String   @id @default(uuid())
  username      String   @unique
  password_hash String   @map("password_hash")
  role          String
  created_at    DateTime @default(now()) @map("created_at")

  @@map("users")
}

model Patient {
  id              String         @id @default(uuid())
  name            String
  rg              String?
  gender          String?
  cpf             String?        @unique
  birth_date      String?        @map("birth_date")
  phone           String?
  zipcode         String?
  street          String?
  district        String?
  house_number    String?        @map("house_number")
  additional_info String?        @map("additional_info")
  country         String?
  state           String?
  city            String?
  medical_history String?        @map("medical_history")
  created_at      DateTime       @default(now()) @map("created_at")
  prescriptions   Prescription[]

  @@map("patients")
}

model Prescription {
  id              String   @id @default(uuid())
  patient_id      String   @map("patient_id")
  date_prescribed String   @map("date_prescribed")
  json_form_info  String   @map("json_form_info")
  created_at      DateTime @default(now()) @map("created_at")
  patient         Patient  @relation(fields: [patient_id], references: [id], onDelete: Cascade)

  @@map("prescriptions")
}

model Cid {
  id          String   @id @default(uuid())
  code        String   @unique
  description String?
  created_at  DateTime @default(now()) @map("created_at")

  @@map("cids")
}

model Medication {
  id          String   @id @default(uuid())
  name        String   @unique
  information String?
  created_at  DateTime @default(now()) @map("created_at")

  @@map("medications")
}
